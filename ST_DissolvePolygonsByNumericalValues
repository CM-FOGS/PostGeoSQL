DROP FUNCTION IF EXISTS ST_DissolvePolygonsByNumericalValues(
numeric_value integer,
geom GEOMETRY)

CREATE OR REPLACE FUNCTION ST_DissolvePolygonsByNumericalValues(
numeric_value integer,
geom GEOMETRY)
RETURNS TABLE (numeric_value integer, geom GEOMETRY) AS
$BODY$
WITH
tbla AS (SELECT),
tblb AS (SELECT ST_Polygonize(ST_Boundary(geom)) geom FROM tbla GROUP BY numeric_value)
SELECT numeric_value, ST_Union(geom) geom FROM tblb GROUP BY numeric_value;
$BODY$
LANGUAGE SQL

SELECT (ST_DissolvePolygonsByNumericalValues(numeric_value, ST_Union(geom))).* FROM <table_name> GROUP BY numeric_value
OR
SELECT array_agg(id) as ids, (ST_DissolvePolygonsByNumericalValues(numeric_value, ST_Union(geom))).* FROM <table_name> GROUP BY numeric_value
