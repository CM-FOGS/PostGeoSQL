DROP FUNCTION ST_GeoAstroide(
geom GEOMETRY,
distance float,
direction_degrees_npts bigint,
numerator_exponentiation integer,
denominator_exponentiation integer)
	
CREATE OR REPLACE FUNCTION ST_GeoAstroide(
geom GEOMETRY,
distance float,
direction_degrees_npts bigint,
numerator_exponentiation integer,
denominator_exponentiation integer)
RETURNS GEOMETRY AS 
$BODY$
SELECT ST_Point(ST_X($1)+$2*(SIND($3)^3)^$4/$5, ST_Y($1)+$2*(COSD($3)^3)^$4/$5);
$BODY$
LANGUAGE SQL

SELECT ST_SetSrid(ST_MakeLine(ST_GeoAstroide(geom, 1, i, 1, 1)),4326) geom FROM (SELECT ST_Point(0, 0) geom) foo CROSS JOIN LATERAL generate_series (0,360) AS step(i)

* experimental
