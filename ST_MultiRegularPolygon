DROP FUNCTION IF EXISTS ST_MultiRegularPolygon(
geom GEOMETRY,
radius float,
edge integer,
quantity integer)

CREATE OR REPLACE FUNCTION ST_MultiRegularPolygon(
geom GEOMETRY,
radius float,
edge integer,
quantity integer)
RETURNS GEOMETRY AS
$BODY$
WITH
    tbla AS (SELECT $1),
    tblb AS (SELECT ST_RegularPolygon($1,$2*i,$3) geom FROM tbla a CROSS JOIN LATERAL generate_series (1, $4) AS step(i) GROUP BY i)
		SELECT ST_Polygonize(geom) geom FROM tblb;
$BODY$
LANGUAGE SQL

SELECT ST_SetSRID(ST_MultiRegularPolygon(geom, 0.1, 8, 5),4326) geom FROM (SELECT ST_Point(0,0) geom) foo
